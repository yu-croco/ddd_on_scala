
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           adapter.controllers.HomeController.index()

PUT    /hunters/:hunterId/attack                    adapter.controllers.hunter.AttackMonsterController.update(hunterId: Long)
POST   /hunters/:hunterId/get_material_from_monster adapter.controllers.hunter.GetMaterialFromMonsterController.create(hunterId: Long)
PUT    /monsters/:monsterId/attack                             adapter.controllers.monster.AttackHunterController.update(monsterId: Long)

GET    /hunters       adapter.controllers.hunter.HuntersController.index()

GET    /monsters    adapter.controllers.monster.MonstersController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

      