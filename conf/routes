
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           adapter.controllers.HomeController.index()

PUT    /hunters/attack     adapter.controllers.hunter.AttackMonsterController.update()
POST   /hunters/get_material_from_monster adapter.controllers.hunter.GetMaterialFromMonsterController.create()
PUT    /monsters/attack    adapter.controllers.monster.AttackHunterController.update()

GET    /hunters       adapter.controllers.hunter.HuntersController.index()

GET    /monsters    adapter.controllers.monster.MonstersController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

      